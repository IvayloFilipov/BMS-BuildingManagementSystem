@model BuildingManagementSystem.Web.ViewModels.Tenants.RegisterTenantViewModel

<div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 col-ld-6 offset-ld-2">
        <h2 class="text-center">Домова книга</h2>
        @*(User.Identity.IsAuthenticated) (User.IsInRole("user") || User.IsInRole("admin"))*@
        @if (User.Identity.IsAuthenticated)
        {
            <h3 class="text-center text-info">Регистриране на наемател</h3>
        }
        else
        {
            <h3 class="text-center text-info">Изтриване на наемател</h3>
        }

        <hr />
        <hr />

        @if (User.Identity.IsAuthenticated)
        {
            <p class="mb-4">Вие се намирате на страницата за <b>Регистриране на наемател</b> от функционалността по попълване на данни за електронната Домова книга.</p>
            <p class="mb-4">Моля попълнете всички полета от формата. За да регистрирате наемател и да завършите подаването на данни натиснете бутона <b>'ЗАПИШИ'</b>.</p>
        }
        else
        {
            <p class="mb-4">Вие се намирате на страницата за <b>Изтриване на наемател</b> от функционалността по попълване на данни за електронната Домова книга.</p>
            <p class="mb-4">Моля попълнете всички полета от формата. За да регистрирате наемател и да завършите подаването на данни натиснете бутона <b>'ИЗТРИЙ НАЕМАТЕЛ'</b>.</p>
        }
    </div>

    <div class="col-sm-12 col-md-8 offset-md-2 col-ld-6 offset-ld-2">
        <form method="post" asp-action="RegisterTenant" asp-controller="Tenants">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group">
                <i class="fas fa-user"></i>
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-user"></i>
                <label asp-for="@Model.MiddleName"></label>
                <input asp-for="@Model.MiddleName" class="form-control" />
                <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-user"></i>
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-envelope"></i>
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" value="@this.User.Identity.Name" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <i class="fas fa-mobile-alt"></i>
                <label asp-for="@Model.Phone"></label>
                <input asp-for="@Model.Phone" class="form-control" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>

            @*<input type="submit" class="btn btn-primary text-uppercase" value="Запиши" onclick="window.location= '@Url.Action( "action Name", "controller Name")'" />*@
            <input type="submit" class="btn btn-primary text-uppercase" value="Запиши" />
            @*<input type="button" class="btn btn-primary text-uppercase" value="Изтрий наемател" onclick="window.location= '@Url.Action( "Index", "Home")'" />*@
            <input type="submit" class="btn btn-primary text-uppercase" value="Изтрий наемател" />

        </form>
        <br />
    </div>
</div>