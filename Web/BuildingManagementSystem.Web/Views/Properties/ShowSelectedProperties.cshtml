@model BuildingManagementSystem.Web.ViewModels.Properties.FinalRegistrationPropertyViewModel

@{
    var loggedUser = this.User.GetId();
    var firstName = this.User.Identity.Name;

    int count = 1;
}

<div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 col-ld-6 offset-ld-2">
        <h2 class="text-center">Домова книга</h2>
        <h3 class="text-center text-info">Стъпка 5 - Попълване на данните за притежавания от Вас имот</h3>
        <hr />
        <hr />

        <p>Моля попълнете полета от формата, валидни за <b class="text-danger">притежавания от Вас имот</b>. След като го направите натиснете бутона <b>'ЗАПИШИ'</b> за да завършите попълването на електронната Домова книга.</p>
    </div>
    <div>
        <table class="table table-responsive-sm mt-4 mb-5">
            <thead class="thead-light">
                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Сграда</th>
                    <th scope="col">Тип на имота</th>
                    <th scope="col">Етаж №</th>
                    <th scope="col">Имот №</th>
                    <th scope="col">Идеални части (%)</th>
                    <th scope="col">Име, Фамилия</th>
                    @*<th scope="col">Изтрий</th>*@
                </tr>
            </thead>
            <tbody>
                <tr class="table-hover">
                    <th scope="row">@count</th>
                    <td>@Model.BuildingName</td>
                    <td>@Model.PropertyType</td>
                    <td>@Model.PropertyFloor</td>
                    <td>@Model.PropertyNumber</td>
                    <td>@Model.PropertyPart</td>
                    <td>@firstName</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-sm-12 col-md-8 offset-md-2 col-ld-6 offset-ld-2">
        <form method="post" asp-action="ShowSelectedPropertiesAsync" asp-controller="Properties">
            <div class="form-group">
                <i class="fas fa-info-circle"></i>
                <label asp-for="@Model.DogCount"></label>
                <input asp-for="@Model.DogCount" class="form-control" />
                <span asp-validation-for="@Model.DogCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fas fa-user-plus"></i>
                <label asp-for="@Model.CoOwner"></label>
                <input asp-for="@Model.CoOwner" class="form-control" />
                <span asp-validation-for="@Model.CoOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.LoggedUserId" value="@loggedUser" class="form-control" />
                <span asp-validation-for="@Model.LoggedUserId"></span>
            </div>

            <p class="text-primary mb-3">Моля запишете данните!</p>

            @*<input type="button" class="btn btn-primary text-uppercase" value="Назад" onclick="window.location= '@Url.Action( "RegisterAddress", "Registrations")'" />*@

            @*<input type="submit" class="btn btn-primary text-uppercase" value="Запиши" onclick="window.location= '@Url.Action( "Info", "Home")'" />*@
            <input type="submit" class="btn btn-primary text-uppercase" value="Запиши" />
        </form>
        <br />
    </div>
</div>

