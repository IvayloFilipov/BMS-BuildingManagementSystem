@model IEnumerable<BuildingManagementSystem.Web.ViewModels.Properties.ShowAllPropertiesViewModel>

@{
    ViewData["Title"] = "гр. София, ул. Първа, №101";

    int count = 1;
}

<div class="row">
    <div class="col-sm-12 col-md-8 offset-md-2 col-ld-6 offset-ld-2">
        <h2 class="text-center">Домова книга</h2>
        <h3 class="text-center text-info">Стъпка 4 - Извършване на регистрация за закупения от Вас имот</h3>
        <hr />
        <hr />
        <p class="mb-5 text-black"><b>ВАЖНО: </b>Натиснете бутона <b class="text-primary">'Регистрирай'</b> на закупения от Вас имот и попълнете допълнителната информация в полетата</p>
        <h5 class="text-center text-black">Списък на непродадените имоти в сграда "Моята кооперация" с адрес: <b>@ViewData["Title"]</b></h5>
    </div>

    <table class="table table-responsive-sm mt-4">
        <thead class="thead-light">
            <tr>
                <th scope="col">№</th>
                <th scope="col">Сграда</th>
                <th scope="col">Тип на имота</th>
                <th scope="col">Етаж №</th>
                <th scope="col">Имот №</th>
                <th scope="col">Идеални части (%)</th>
                <th scope="col">Регистрирай се</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model.Where(x => x.IsSold == false))
            {
                <tr class="table-hover">
                    <th scope="row">@(count++)</th>
                    <td>@property.BuildingName</td>
                    <td>@property.PropertyType</td>
                    <td>@property.PropertyFloor</td>
                    <td>@property.PropertyNumber</td>
                    <td>@property.PropertyPart</td>
                    <td>
                        <div class="align-content-lg-around float-md-none float-md-none">
                            <a asp-controller="Properties" asp-action="ConfirmPropertyRegitration" asp-route-id="@property.Id" class="btn btn-outline-primary btn-sm ">Регистрирай</a>
                            @*<button id="@property.Id" type="submit" class="registerButton btn btn-outline-primary btn-sm">Регистрирай</button>*@
                            @*<input type="submit" class="btn btn-outline-primary text-uppercase" value="Регистрирай" onclick="window.location= '@Url.Action( "Info", "Home")'" />*@
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
